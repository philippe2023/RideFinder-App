<section class="relative">
    <div class="w-full mx-auto sm:px-6">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 mx-auto py-20 max-md:px-2">
            <!-- Ride Image -->
            <div class="img">
                <div class="img-box h-full max-lg:mx-auto">
                    <img src="https://via.placeholder.com/600x400" alt="Ride Image" class="max-lg:mx-auto lg:ml-auto h-full object-cover rounded-lg">
                </div>
            </div>
            <!-- Ride Details -->
            <div class="data w-full lg:pr-8 pr-0 xl:justify-start justify-center flex items-center max-lg:pb-10 xl:my-2 lg:my-5 my-0">
                <div class="data w-full max-w-xl">
                    <p class="text-lg font-medium leading-8 text-indigo-600 mb-4">Ride Details</p>
                    <h2 class="font-manrope font-bold text-3xl leading-10 text-gray-900 mb-2 capitalize">
                        <%= @ride.departure_location %> â†’ <%= @ride.arrival_location %>
                    </h2>
                    <div class="flex flex-col sm:flex-row sm:items-center mb-6">
                        <h6 class="font-manrope font-semibold text-2xl leading-9 text-gray-900 pr-5 sm:border-r border-gray-200 mr-5">
                            â‚¬<%= @ride.price_per_seat %> per seat
                        </h6>
                        <div class="flex items-center gap-2">
                            <div class="flex items-center gap-1">
                                <% 3.times do %>
                                    <svg width="20" height="20" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg">
                                        <path d="M9.10326 2.31699C9.47008 1.57374 10.5299 1.57374 10.8967 2.31699L12.7063 5.98347C12.8519 6.27862 13.1335 6.48319 13.4592 6.53051L17.5054 7.11846C18.3256 7.23765 18.6531 8.24562 18.0596 8.82416L15.1318 11.6781C14.8961 11.9079 14.7885 12.2389 14.8442 12.5632L15.5353 16.5931C15.6754 17.41 14.818 18.033 14.0844 17.6473L10.4653 15.7446C10.174 15.5915 9.82598 15.5915 9.53466 15.7446L5.91562 17.6473C5.18199 18.033 4.32456 17.41 4.46467 16.5931L5.15585 12.5632C5.21148 12.2389 5.10393 11.9079 4.86825 11.6781L1.94038 8.82416C1.34687 8.24562 1.67438 7.23765 2.4946 7.11846L6.54081 6.53051C6.86652 6.48319 7.14808 6.27862 7.29374 5.98347L9.10326 2.31699Z" fill="#FBBF24" />
                                    </svg>
                                <% end %>
                            </div>
                            <span class="pl-2 font-normal leading-7 text-gray-500 text-sm">Available Seats: <%= @ride.available_seats %></span>
                        </div>
                    </div>
                    <p class="text-gray-500 text-base font-normal mb-5">
                        <%= @ride.additional_info.presence || "No additional information provided for this ride." %>
                    </p>
                    <ul class="grid gap-y-4 mb-8">
                        <li class="flex items-center gap-3">
                            <svg width="26" height="26" viewBox="0 0 26 26" fill="none" xmlns="http://www.w3.org/2000/svg">
                                <rect width="26" height="26" rx="13" fill="#4F46E5" />
                                <path d="M7.66669 12.629L10.4289 15.3913C10.8734 15.8357 11.0956 16.0579 11.3718 16.0579C11.6479 16.0579 11.8701 15.8357 12.3146 15.3913L18.334 9.37183" stroke="white" stroke-width="1.6" stroke-linecap="round" />
                            </svg>
                            <span class="font-normal text-base text-gray-900">Driver: <%= @ride.driver.email %></span>
                        </li>
                        <li class="flex items-center gap-3">
                            <svg width="26" height="26" viewBox="0 0 26 26" fill="none" xmlns="http://www.w3.org/2000/svg">
                                <rect width="26" height="26" rx="13" fill="#4F46E5" />
                                <path d="M7.66669 12.629L10.4289 15.3913C10.8734 15.8357 11.0956 16.0579 11.3718 16.0579C11.6479 16.0579 11.8701 15.8357 12.3146 15.3913L18.334 9.37183" stroke="white" stroke-width="1.6" stroke-linecap="round" />
                            </svg>
                            <span class="font-normal text-base text-gray-900">Departure: <%= @ride.departure_time.strftime("%B %d, %Y %H:%M") %></span>
                        </li>
                        <li class="flex items-center gap-3">
                            <svg width="26" height="26" viewBox="0 0 26 26" fill="none" xmlns="http://www.w3.org/2000/svg">
                                <rect width="26" height="26" rx="13" fill="#4F46E5" />
                                <path d="M7.66669 12.629L10.4289 15.3913C10.8734 15.8357 11.0956 16.0579 11.3718 16.0579C11.6479 16.0579 11.8701 15.8357 12.3146 15.3913L18.334 9.37183" stroke="white" stroke-width="1.6" stroke-linecap="round" />
                            </svg>
                            <span class="font-normal text-base text-gray-900">Status: <%= @ride.status %></span>
                        </li>
                    </ul>
                    <div class="flex items-center gap-3">
                        <%= button_to "Book Ride", 
                                        ride_bookings_path(@ride), 
                                        method: :post, 
                                        class: "text-center w-full px-5 py-4 rounded-full bg-indigo-600 flex items-center justify-center font-semibold text-lg text-white shadow-sm transition-all duration-500 hover:bg-indigo-700 hover:shadow-indigo-400" %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>