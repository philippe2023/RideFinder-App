<%# Homepage Header %>
<div class="hero bg-blue-100 text-center py-16">
    <h1 class="text-5xl font-extrabold text-gray-800">Welcome to FaFa App</h1>
    <p class="text-xl text-gray-600 mt-6">Your trusted platform for booking rides and managing trips effortlessly.</p>
    <div class="mt-8">
        <a href="/rides" class="btn btn-primary text-white bg-indigo-600 hover:bg-indigo-700 px-6 py-3 rounded-lg text-lg shadow-md transition-all">
            Explore Rides
        </a>
        <a href="/bookings" class="btn btn-secondary text-indigo-600 bg-white border border-indigo-600 hover:bg-indigo-100 px-6 py-3 rounded-lg ml-4 text-lg shadow-md transition-all">
            My Bookings
        </a>
    </div>
</div>

<%# Homepage Ride Cards %>
<div class="py-16">
    <div class="mx-auto max-w-8xl">
        <h2 class="text-4xl font-bold text-gray-900 text-center mb-12">Available Rides</h2>
        
        <div class="flex items-center gap-4 mb-10">
            <input type="text" 
                class="flex-grow px-4 py-3 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring focus:ring-indigo-300 placeholder-gray-400 text-lg w-full" 
                placeholder="Enter your destination...">
            <button class="px-8 py-3 bg-indigo-600 hover:bg-indigo-700 text-white text-lg font-semibold rounded-lg shadow-md transition-all">
                Search
            </button>
        </div>

        <% if @rides.present? %>
        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-4 gap-6">
            <% @rides.sample(4).each do |ride| %>
                <%= link_to ride_path(ride), class: "group block bg-white border border-gray-300 rounded-xl p-5 shadow-sm hover:border-indigo-600 hover:shadow-lg transition-all" do %>
                    <div class="mb-4">
                        <img src="https://via.placeholder.com/200x100" alt="Vehicle" class="rounded-lg w-full h-40 object-cover">
                    </div>
                    <div>
                        <h4 class="text-xl font-semibold text-gray-800 mb-2">
                            <%= ride.departure_location %> → <%= ride.arrival_location %>
                        </h4>
                        <p class="text-sm text-gray-600">Driver: <%= ride.driver.email %></p>
                        <p class="text-lg text-indigo-600 font-bold mt-1">€<%= ride.price_per_seat %> per seat</p>
                        <p class="text-sm text-gray-500 mt-1">Departs: <%= time_ago_in_words(ride.departure_time) %></p>
                    </div>
                <% end %>
            <% end %>
        </div>
        <div class="flex justify-center mt-12 pt-14">
            <%= link_to "View All Rides", rides_path, class: "py-3 px-8 bg-white border border-gray-300 rounded-lg text-gray-700 font-semibold hover:bg-gray-100 transition-all shadow-md" %>
        </div>
        <% else %>
        <p class="text-center text-gray-500 py-20">No available rides at the moment. Please check back later.</p>
        <% end %>
    </div>
</div>

<%# Homepage Features Section %>
<div class="features py-16 bg-gray-50">
    <div class="mx-auto max-w-7xl px-6 lg:px-8">
        <h2 class="text-3xl font-bold text-gray-800 text-center mb-12">Why Choose Us?</h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            <div class="feature text-center p-6 bg-white shadow-md rounded-lg">
                <h3 class="text-xl font-semibold text-blue-600 mb-3">Safe Rides</h3>
                <p class="text-gray-600">Ride with verified drivers for a secure experience.</p>
            </div>
            <div class="feature text-center p-6 bg-white shadow-md rounded-lg">
                <h3 class="text-xl font-semibold text-blue-600 mb-3">Affordable Prices</h3>
                <p class="text-gray-600">Get competitive prices on every ride.</p>
            </div>
            <div class="feature text-center p-6 bg-white shadow-md rounded-lg">
                <h3 class="text-xl font-semibold text-blue-600 mb-3">Seamless Booking</h3>
                <p class="text-gray-600">Book rides easily with our user-friendly interface.</p>
            </div>
        </div>
    </div>
</div>